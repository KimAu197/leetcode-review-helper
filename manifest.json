{
  "manifest_version": 3,
  "name": "LeetCode Spaced Repetition",
  "version": "1.0.0",
  "description": "根据遗忘曲线智能安排LeetCode题目复习，自动同步到Google Calendar",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode.cn/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.cn/problems/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "165794849996-a9rrhqm7usc2epsj204qqdn57o82ium5.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  }
}
